<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="200dp" />
            <gradient android:angle="45" android:endColor="@color/btnLoginEnd" android:startColor="@color/btnLoginStart" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="200dp" />
            <gradient android:angle="45" android:endColor="@color/btnLoginEnd" android:startColor="@color/btnLoginStart" />
            <padding android:bottom="8dp" android:left="68dp" android:right="68dp" android:top="8dp" />
        </shape>
    </item>

</selector>