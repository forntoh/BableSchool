<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/top_student_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/top_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@+id/top_student_image"
        app:layout_constraintTop_toTopOf="@+id/top_student_image"
        tools:text="Forntoh" />

    <TextView
        android:id="@+id/top_student_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/top_student_image"
        app:layout_constraintTop_toBottomOf="@+id/top_student_name"
        tools:text="GBHS Kumbo" />

    <TextView
        android:id="@+id/top_student_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/textBlue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_student_image"
        app:layout_constraintEnd_toEndOf="@+id/top_student_school"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/top_student_image"
        app:layout_constraintTop_toBottomOf="@+id/top_student_school"
        tools:text="18.95" />
</androidx.constraintlayout.widget.ConstraintLayout>